<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/token_simplified"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/eth_in_usd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7.5dp"
        android:max="500"
        android:progress="0"
        android:progressDrawable="@drawable/circular"/>

    <RelativeLayout
        android:id="@+id/progressBarShadow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@id/eth_in_usd"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/eth_in_usd"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/ether_raised"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:textSize="@dimen/small_text"/>

    <TextView
        android:id="@+id/ether_raised"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/pivot"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/text_big"/>

    <ImageView
        android:id="@+id/pivot"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/dollar_raised"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pivot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/text_big"/>

    <TextView
        android:id="@+id/update_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dollar_raised"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/please_wait"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/small_text"/>


</RelativeLayout>