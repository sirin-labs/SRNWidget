<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="widget.sirinlabs.com.crowdsale.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/sirin_labs"/>
        #eter:$
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_modifier"
                android:layout_width="@dimen/modifier_width"
                android:layout_height="wrap_content"
                android:text="@string/ether"/>

            <TextView
                android:id="@+id/eth_in_usd"
                style="@style/textview_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_avalible"/>
        </LinearLayout>
        #total $
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_modifier"
                android:layout_width="@dimen/modifier_width"
                android:layout_height="wrap_content"
                android:text="@string/total_raised_in_dollar"/>

            <TextView
                android:id="@+id/total_in_usd"
                style="@style/textview_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_avalible"/>
        </LinearLayout>
        #total ether
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_modifier"
                android:layout_width="@dimen/modifier_width"
                android:layout_height="wrap_content"
                android:text="@string/Total_ether_raised"/>

            <TextView
                android:id="@+id/ether_raised"
                style="@style/textview_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_avalible"/>
        </LinearLayout>
        #multisig
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_modifier"
                android:layout_width="@dimen/modifier_width"
                android:layout_height="wrap_content"
                android:text="@string/multisig"/>

            <TextView
                android:id="@+id/multisig"
                style="@style/textview_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_avalible"/>
            <TextView
                android:id="@+id/multisig_change"
                android:visibility="gone"
                style="@style/textview_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_avalible"/>
        </LinearLayout>
        #vault
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_modifier"
                android:layout_width="@dimen/modifier_width"
                android:layout_height="wrap_content"
                android:text="@string/vault"/>

            <TextView
                android:id="@+id/vault_total_ether"
                style="@style/textview_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_avalible"/>
        </LinearLayout>
        #fiat
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_modifier"
                android:layout_width="@dimen/modifier_width"
                android:layout_height="wrap_content"
                android:text="@string/fiat"/>

            <TextView
                android:id="@+id/fiat_raised"
                style="@style/textview_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_avalible"/>
        </LinearLayout>
        #srn
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_modifier"
                android:layout_width="@dimen/modifier_width"
                android:layout_height="wrap_content"
                android:text="@string/SRN_total_supply"/>

            <TextView
                android:id="@+id/sirin_total_supply"
                style="@style/textview_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_avalible"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="@string/version"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/version_modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_id"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>
