<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="textview_modifier">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="textview_value" parent="textview_modifier">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">start</item>

    </style>

    <style name="progressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/circle</item>
    </style>

</resources>
